{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Vachilang",
  "patterns": [
    {
      "include": "#keywords"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.operator",
          "match": "\\b(NOP|ADD|SUB|IF|MORE|LESS|ADDI|TAG)\\b"
        },
        {
          "name": "comment",
          "match": "#.*$"
        },
        {
          "name": "variable",
          "match": "&\\d+"
        },
        {
          "name": "constant.numeric",
          "match": "\\b\\d+\\b"
        }
      ]
    }
  },
  "scopeName": "source.vachi"
}
